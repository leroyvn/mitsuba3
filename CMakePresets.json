{
    "version": 2,
    "cmakeMinimumRequired": {
        "major": 3,
        "minor": 19,
        "patch": 0
    },
    "configurePresets": [{
        "name": "default",
        "displayName": "Default, no GPU",
        "description": "Default build using Ninja generator, without GPU",
        "generator": "Ninja",
        "binaryDir": "${sourceDir}/build",
        "cacheVariables": {
            "CMAKE_BUILD_TYPE": "Release",
            "MI_ENABLE_EMBREE": "OFF",
            "MI_DEFAULT_VARIANTS": "scalar_rgb;scalar_spectral;llvm_rgb;llvm_ad_rgb"
        }
    }],
    "buildPresets": [{
        "name": "default",
        "configurePreset": "default"
    }]
}
